<Page x:Class="Captura.Pages.CyberWin_LensSettingsPage"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:captura="clr-namespace:Captura"
      xmlns:local="clr-namespace:Captura"
      
      Title="东方仙盟鼠标聚焦设置">

        <!-- 注册资源 -->
 

   <ScrollViewer Margin="20">
        <StackPanel  >
            <!-- 启用透镜效果 -->
            <CheckBox Content="启用鼠标聚焦效果"
                      IsChecked="{Binding LensSettings.Enabled}" Foreground="#FFE8E1E1" />

            <!-- 透镜直径 -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="透镜直径(px):" Width="120" VerticalAlignment="Center" Foreground="#FFE8DEDE" />
                <Slider Minimum="100" Maximum="1000"
                        Value="{Binding LensSettings.LensDiameter}"
                        Width="200" Margin="0,5" />
                <TextBlock Text="{Binding LensSettings.LensDiameter}"
                           Margin="10,0" Width="50" VerticalAlignment="Center" />
            </StackPanel>

            <!-- 缩放倍数 -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="缩放倍数:" Width="120" VerticalAlignment="Center" Foreground="#FFEFDBDB" />
                <Slider Minimum="1.1" Maximum="5.0"
                        Value="{Binding LensSettings.ZoomFactor}"
                        Width="200" Margin="0,5"
                        SmallChange="0.1" LargeChange="0.5" />
                <TextBlock Text="{Binding LensSettings.ZoomFactor, StringFormat=F1}"
                           Margin="10,0" Width="50" VerticalAlignment="Center" />
            </StackPanel>

            <!-- 边框颜色 -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="边框颜色:" Width="120" VerticalAlignment="Center" Foreground="#FFDCCECE" />
                <Button Content="选择颜色"
                        Command="{Binding PickBorderColorCommand}"
                        Margin="0,5" />
                <Border Width="30" Height="30"
                        Margin="10,0"
                        Background="{Binding LensSettings.BorderColor}" />
            </StackPanel>

            <!-- 边框厚度 -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="边框厚度:" Width="120" VerticalAlignment="Center" Foreground="#FFE8DEDE" />
                <Slider Minimum="1" Maximum="10"
                        Value="{Binding LensSettings.BorderThickness}"
                        Width="200" Margin="0,5" />
                <TextBlock Text="{Binding LensSettings.BorderThickness}"
                           Margin="10,0" Width="50" VerticalAlignment="Center" />
            </StackPanel>

            <!-- 超出绘制模式 -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="超出绘制模式:"    Foreground="#FFE8DEDE" />
                <ComboBox Width="200" 
                           SelectedValuePath="Tag"
                          SelectedValue="{Binding LensSettings.东方仙盟_鼠标聚焦放大_超出绘制模式, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          Margin="0,5">
                    <ComboBoxItem Content="向中心靠近" Tag="向中心靠近"/>
                    <ComboBoxItem Content="原始效果" Tag="原始效果"/>
                </ComboBox>
            </StackPanel>

            <!-- 放大镜形状 -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="放大镜形状:"  Foreground="#FFE8DEDE" />
                <ComboBox Width="200" 
                           SelectedValuePath="Tag"
                          SelectedValue="{Binding LensSettings.东方仙盟_鼠标聚焦放大_放大镜形状, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          Margin="0,5">
                    <ComboBoxItem Content="圆形" Tag="圆形"/>
                    <ComboBoxItem Content="圆角矩形" Tag="圆角矩形"/>
                    <ComboBoxItem Content="五角星" Tag="五角星"/>
                    <ComboBoxItem Content="心形" Tag="心形"/>
                    <ComboBoxItem Content="六边形" Tag="六边形"/>
                    <ComboBoxItem Content="钻石" Tag="钻石"/>
                    <ComboBoxItem Content="三角形" Tag="三角形"/>
                    <ComboBoxItem Content="3D圆形" Tag="3D圆形"/>
                </ComboBox>
            </StackPanel>

            <!-- 出现效果 -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="出现效果:"   Foreground="#FFE8DEDE" />
                <ComboBox Width="200" 
                           SelectedValuePath="Tag"
                          SelectedValue="{Binding LensSettings.东方仙盟_鼠标聚焦放大_出现效果, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          Margin="0,5">
                    <ComboBoxItem Content="默认" Tag="默认"/>
                    <ComboBoxItem Content="翻书" Tag="翻书"/>
                    <ComboBoxItem Content="慢慢放大" Tag="慢慢放大"/>
                </ComboBox>
            </StackPanel>
            
            
        </StackPanel>
    </ScrollViewer>
</Page>
