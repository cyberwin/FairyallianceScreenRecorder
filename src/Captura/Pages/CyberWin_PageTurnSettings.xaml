<Page x:Class="Captura.Pages.CyberWin_PageTurnSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Captura.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="翻书特效设置">

    <Grid Margin="20">
        <!-- 翻书时长 -->
        <StackPanel Orientation="Vertical" Margin="0,0,0,20">
            <!-- 启用透镜效果 -->
            <CheckBox x:Name="开始录制翻页" Content="开始录制翻页"
              IsChecked="{Binding CWSettings.开始录制翻页}" Foreground="#FFE8E1E1" />
            <TextBlock Text="翻书时长（1~5秒）" FontSize="14" Foreground="#FFDE1D1D"/>
            <Slider x:Name="DurationSlider" 
                    Minimum="1" Maximum="5" Value="{Binding CWSettings.DurationSlider}" 
                    TickFrequency="1" IsSnapToTickEnabled="True"
                    Margin="0,5,0,0"/>
            <TextBlock x:Name="DurationText" Text="当前：3秒" HorizontalAlignment="Right"/>
        </StackPanel>

        <!-- 褶皱程度 -->
        <StackPanel Orientation="Vertical" Margin="0,40,0,20">
            <TextBlock Text="褶皱程度（5~30）" FontSize="14" Foreground="#FFCA2525"/>
            <Slider x:Name="FoldSlider" 
                    Minimum="5" Maximum="30" Value="{Binding CWSettings.FoldSlider}" 
                    TickFrequency="1"
                    Margin="0,5,0,0"/>
            <TextBlock x:Name="FoldText" Text="当前：15" HorizontalAlignment="Right"/>
        </StackPanel>

        <!-- 阴影透明度 -->
        <StackPanel Orientation="Vertical" Margin="0,80,0,20">
            <TextBlock Text="阴影深度（100~255）" FontSize="14" Foreground="#FFE42B2B"/>
            <Slider x:Name="ShadowSlider" 
                    Minimum="100" Maximum="255" Value="{Binding CWSettings.ShadowSlider}" 
                    TickFrequency="10"
                    Margin="0,5,0,0"/>
            <TextBlock x:Name="ShadowText" Text="当前：180" HorizontalAlignment="Right"/>
        </StackPanel>

        <!-- 缓动类型 -->
        <StackPanel Orientation="Vertical" Margin="0,120,0,20">
            <TextBlock Text="翻书动画效果" FontSize="14" Foreground="#FFCC2222"/>
            <ComboBox x:Name="EaseComboBox" Margin="0,5,0,0"   SelectedValuePath="Tag"   SelectedValue="{Binding CWSettings.EaseComboBox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        >
                <ComboBoxItem Tag="Linear">线性（匀速）</ComboBoxItem>
                <ComboBoxItem Tag="EaseInCubic" IsSelected="True">先慢后快</ComboBoxItem>
                <ComboBoxItem Tag="EaseOutCubic">先快后慢</ComboBoxItem>
                <ComboBoxItem Tag="EaseInOutCubic">先慢→快→慢（推荐）</ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <!-- 确认按钮 -->
        <Button Content="保存设置" 
                Click="SaveButton_Click"
                Width="100" Height="30"
                HorizontalAlignment="Center"
                Margin="0,220,0,0"/>
    </Grid>
</Page>
