<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:Captura"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="Captura.MainWindow"
        DataContext="{Binding MainViewModel, Source={StaticResource ServiceLocator}}"
        ResizeMode="CanMinimize"
        Icon="/Windows/icon_fairyalliapp150.png"
        SizeToContent="Height"
        MaxWidth="640"
        Title="仙盟创梦-屏幕录像Captura"
        Left="{Binding Settings.UI.MainWindowLeft, Mode=TwoWay}"
        Top="{Binding Settings.UI.MainWindowTop, Mode=TwoWay}"
        BorderThickness="1"
        BorderBrush="{DynamicResource Accent}"
        Topmost="{Binding Settings.UI.MainWindowTopmost}" Width="495">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="1"
                      UseAeroCaptionButtons="False"
                      NonClientFrameEdges="None"
                      CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo Overlay="{Binding RecordingViewModel.RecorderState.Value, Converter={StaticResource StateToTaskbarOverlayConverter}, Source={StaticResource ServiceLocator}}"
                         Description="Captura">
            <TaskbarItemInfo.ThumbButtonInfos>
                <ThumbButtonInfo Command="{Binding ScreenShotViewModel.ScreenShotCommand, Source={StaticResource ServiceLocator}}"
                                 Description="{Binding ScreenShot, Mode=OneWay, Source={StaticResource Loc}}"
                                 DismissWhenClicked="True"
                                 ImageSource="{StaticResource ScreenShotImageSource}"/>
                <ThumbButtonInfo Command="{Binding RecordingViewModel.RecordCommand, Source={StaticResource ServiceLocator}}"
                                 Description="{Binding RecordStop, Mode=OneWay, Source={StaticResource Loc}}"
                                 DismissWhenClicked="True"
                                 ImageSource="{StaticResource RecordStopImageSource}"/>
            </TaskbarItemInfo.ThumbButtonInfos>
        </TaskbarItemInfo>
    </Window.TaskbarItemInfo>
    <Grid Background="{DynamicResource WindowBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="98*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NotifyIcon -->
        <tb:TaskbarIcon x:Name="SystemTray"
                        IconSource="{Binding RecordingViewModel.RecorderState.Value, Converter={StaticResource StateToTrayIconSourceConverter}, Source={StaticResource ServiceLocator}}"
                        ToolTipText="Captura"
                        MenuActivation="RightClick"
                        LeftClickCommand="{Binding TrayLeftClickCommand}"
                        TrayMouseDoubleClick="SystemTray_TrayMouseDoubleClick" Grid.ColumnSpan="6">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="{Binding StartStopRecording, Mode=OneWay, Source={StaticResource Loc}}"
                              Command="{Binding RecordingViewModel.RecordCommand, Source={StaticResource ServiceLocator}}">
                        <MenuItem.Icon>
                            <Image Source="{StaticResource RecordStopImageSource}"
                                   Width="13"
                                   Margin="5"/>
                        </MenuItem.Icon>
                    </MenuItem>




                    <MenuItem Header="{Binding PauseResumeRecording, Mode=OneWay, Source={StaticResource Loc}}"
                              Command="{Binding RecordingViewModel.PauseCommand, Source={StaticResource ServiceLocator}}">
                        <MenuItem.Icon>
                            <Image Width="10"
                                   Margin="5">
                                <Image.Source>
                                    <DrawingImage>
                                        <DrawingImage.Drawing>
                                            <GeometryDrawing Geometry="{Binding Icons.Pause, Source={StaticResource ServiceLocator}}"
                                                             Brush="{DynamicResource ItemText}"/>
                                        </DrawingImage.Drawing>
                                    </DrawingImage>
                                </Image.Source>
                                <Image.Style>
                                    <Style TargetType="{x:Type Image}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RecordingViewModel.RecorderState.Value, Source={StaticResource ServiceLocator}}" Value="Paused">
                                                <Setter Property="LayoutTransform">
                                                    <Setter.Value>
                                                        <RotateTransform Angle="90"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                        </MenuItem.Icon>
                    </MenuItem>



                    <Separator/>

                    <MenuItem Header="{Binding ScreenShot, Mode=OneWay, Source={StaticResource Loc}}"
                              Command="{Binding ScreenShotViewModel.ScreenShotCommand, Source={StaticResource ServiceLocator}}">
                        <MenuItem.Icon>
                            <Image Source="{StaticResource ScreenShotImageSource}"
                                   Width="13"
                                   Margin="5"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <MenuItem Header="{Binding ScreenShotDesktop, Mode=OneWay, Source={StaticResource Loc}}"
                              Command="{Binding ScreenShotViewModel.ScreenShotDesktopCommand, Source={StaticResource ServiceLocator}}">
                        <MenuItem.Icon>
                            <Image Source="{StaticResource ScreenShotImageSource}"
                                   Width="13"
                                   Margin="5"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <Separator/>

                    <MenuItem Header="ScreenShot (Region)"
                              Command="{Binding ScreenShotViewModel.ScreenshotRegionCommand, Source={StaticResource ServiceLocator}}">
                        <MenuItem.Icon>
                            <Image Width="13"
                                   Margin="5">
                                <Image.Source>
                                    <DrawingImage>
                                        <DrawingImage.Drawing>
                                            <GeometryDrawing Geometry="{Binding Icons.Crop, Source={StaticResource ServiceLocator}}"
                                                             Brush="{DynamicResource ItemText}"/>
                                        </DrawingImage.Drawing>
                                    </DrawingImage>
                                </Image.Source>
                            </Image>
                        </MenuItem.Icon>
                    </MenuItem>

                    <MenuItem Header="ScreenShot (Screen)"
                              Command="{Binding ScreenShotViewModel.ScreenshotScreenCommand, Source={StaticResource ServiceLocator}}">
                        <MenuItem.Icon>
                            <Image Width="13"
                                   Margin="5">
                                <Image.Source>
                                    <DrawingImage>
                                        <DrawingImage.Drawing>
                                            <GeometryDrawing Geometry="{Binding Icons.Screen, Source={StaticResource ServiceLocator}}"
                                                             Brush="{DynamicResource ItemText}"/>
                                        </DrawingImage.Drawing>
                                    </DrawingImage>
                                </Image.Source>
                            </Image>
                        </MenuItem.Icon>
                    </MenuItem>

                    <MenuItem Header="ScreenShot (Window)"
                              Command="{Binding ScreenShotViewModel.ScreenshotWindowCommand, Source={StaticResource ServiceLocator}}">
                        <MenuItem.Icon>
                            <Image Width="13"
                                   Margin="5">
                                <Image.Source>
                                    <DrawingImage>
                                        <DrawingImage.Drawing>
                                            <GeometryDrawing Geometry="{Binding Icons.Window, Source={StaticResource ServiceLocator}}"
                                                             Brush="{DynamicResource ItemText}"/>
                                        </DrawingImage.Drawing>
                                    </DrawingImage>
                                </Image.Source>
                            </Image>
                        </MenuItem.Icon>
                    </MenuItem>

                    <Separator/>

                    <MenuItem Header="Show Main Window"
                              Click="ShowMainWindow">
                        <MenuItem.Icon>
                            <Image Width="13"
                                   Margin="5">
                                <Image.Source>
                                    <DrawingImage>
                                        <DrawingImage.Drawing>
                                            <GeometryDrawing Geometry="{Binding Icons.Window, Source={StaticResource ServiceLocator}}"
                                                             Brush="{DynamicResource ItemText}"/>
                                        </DrawingImage.Drawing>
                                    </DrawingImage>
                                </Image.Source>
                            </Image>
                        </MenuItem.Icon>
                    </MenuItem>

                    <MenuItem Header="{Binding Exit, Mode=OneWay, Source={StaticResource Loc}}"
                              Click="MenuExit_Click">
                        <MenuItem.Icon>
                            <Image Width="13"
                                   Margin="5">
                                <Image.Source>
                                    <DrawingImage>
                                        <DrawingImage.Drawing>
                                            <GeometryDrawing Geometry="{Binding Icons.Close, Source={StaticResource ServiceLocator}}"
                                                             Brush="#b71c1c"/>
                                        </DrawingImage.Drawing>
                                    </DrawingImage>
                                </Image.Source>
                            </Image>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>

        <Expander Padding="5,0,0,0"
                  Grid.Row="0"
                  IsExpanded="{Binding Settings.UI.Expanded}" Grid.ColumnSpan="6">
            <Expander.Header>
                <Grid>
                    <Border CornerRadius="15,15,25,25"
                            BorderThickness="0"
                            Margin="0,2,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Width="70"
                            Height="33"
                            Background="{DynamicResource ButtonBackgroundHover}"/>
                    <DockPanel VerticalAlignment="Center">
                        <local:CollapsedBar DockPanel.Dock="Bottom"
                                            Margin="-30,0,0,0"/>

                        <local:ScreenShotButton/>
                        <local:ModernButton ToolTip="{Binding RecordStop, Mode=OneWay, Source={StaticResource Loc}}"
                                            Command="{Binding RecordingViewModel.RecordCommand, Source={StaticResource ServiceLocator}}"
                                            Foreground="#ee2c2c"
                                            IconData="{Binding RecordingViewModel.RecorderState.Value, Converter={StaticResource StateToRecordButtonGeometryConverter}, Source={StaticResource ServiceLocator}}"/>
                        <local:PauseButton Width="36"/>
                        <local:ModernButton ToolTip="{Binding Close, Mode=OneWay, Source={StaticResource Loc}}"
                                            Click="CloseButton_Click"
                                            Foreground="#77ef5350"
                                            IconData="{Binding Icons.Close, Source={StaticResource ServiceLocator}}"
                                            DockPanel.Dock="Right"/>
                        <local:ModernButton ToolTip="{Binding MinTray, Mode=OneWay, Source={StaticResource Loc}}"
                                            Click="HideButton_Click"
                                            IconData="{Binding Icons.DoubleDown, Source={StaticResource ServiceLocator}}"
                                            Opacity="0.7"
                                            DockPanel.Dock="Right"/>
                        <local:ModernButton ToolTip="{Binding Minimize, Mode=OneWay, Source={StaticResource Loc}}"
                                            Click="MinButton_Click"
                                            IconData="{Binding Icons.Minimize, Source={StaticResource ServiceLocator}}"
                                            Opacity="0.7"
                                            DockPanel.Dock="Right"/>


                        <!-- 翻书设置按钮
                        <Button x:Name="PageTurnSettingsButton"
    Content="翻书"
     ToolTip="配置翻书速度、褶皱等参数"
         Click="PageTurnNowButton_Click"
            Margin="2"
            Width="80"/>
                         -->
                        <!-- 插入到工具栏的 Button 列表中，比如在 RecordButton 之后 -->
                        <Button x:Name="PageTurnLeftButton"
        Content="左翻书"
        ToolTip="开始左→右翻书特效"
        Click="PageTurnLeftButton_Click"
                               
        Width="70" HorizontalAlignment="Center" FontSize="11"/>
                        <Button x:Name="PageTurnRightButton"
        Content="右翻书"
        ToolTip="开始右→左翻书特效"
        Click="PageTurnRightButton_Click"
                                Padding="0"
                                 BorderThickness="1"
        Margin="0" Width="66"/>



                        <Grid Margin="0,-2"
                              PreviewMouseLeftButtonDown="Grid_PreviewMouseLeftButtonDown"
                              Background="#01000000" Width="80">
                            <Border CornerRadius="15"
                                    BorderThickness="0"
                                    Margin="30,5"
                                    Background="{DynamicResource ButtonBackgroundHover}"/>

                            <StackPanel Margin="10,-1"
                                        Visibility="{Binding TimerModel.Countdown, ConverterParameter=1, Converter={StaticResource IsLessThanConverter}, Source={StaticResource ServiceLocator}}"
                                        x:Name="DurationLabel"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                <Label Content="{Binding TimerModel.TimeSpan, Source={StaticResource ServiceLocator}}"/>

                                <Label Content="{Binding Settings.Duration, Converter={StaticResource SecondsToTimeSpanConverter}}"
                                       ContentStringFormat="{}{0}"
                                       HorizontalAlignment="Center"
                                       FontSize="8"
                                       Visibility="{Binding Settings.Duration, Converter={StaticResource NotNullConverter}}"/>
                            </StackPanel>

                            <Label Visibility="{Binding Visibility, Converter={StaticResource NegatingConverter}, ElementName=DurationLabel}"
                                   Margin="0,-1"
                                   Style="{StaticResource CountdownLabel}"
                                   HorizontalAlignment="Center"
                                   Content="{Binding TimerModel.Countdown, Source={StaticResource ServiceLocator}}"/>
                        </Grid>
                    </DockPanel>
                </Grid>
            </Expander.Header>
            <DockPanel Margin="-5,0"
                       Height="300">
                <Frame Source="../Pages/MainPage.xaml"
                       DockPanel.Dock="Top"/>

                <GridSplitter Height="1"
                              Margin="0,2"
                              DockPanel.Dock="Top"
                              IsEnabled="False"/>

                <Label DockPanel.Dock="Bottom"
                       Margin="5,0"
                       Visibility="{Binding ViewConditions.FpsVisibility.Value, Source={StaticResource ServiceLocator}}">
                    <TextBlock><Run Text="FPS: "/><Run Text="{Binding FpsManager.Fps, Mode=OneWay, Source={StaticResource ServiceLocator}}"/></TextBlock>
                </Label>

                <GridSplitter Height="1"
                              Margin="0,2"
                              DockPanel.Dock="Bottom"
                              IsEnabled="False"/>

                <Grid xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
                      xmlns:interop="clr-namespace:System.Windows.Interop;assembly=PresentationCore">
                    <Label Content="Preview"
                           HorizontalAlignment="Center"
                           Opacity="0.7"/>
                    <WindowsFormsHost x:Name="WinFormsHost"
                                      Visibility="Collapsed">
                        <wf:PictureBox x:Name="DisplayImage"
                                       SizeMode="Zoom"/>
                    </WindowsFormsHost>
                    <Image>
                        <Image.Source>
                            <interop:D3DImage x:Name="D3DImage"/>
                        </Image.Source>
                    </Image>
                </Grid>
            </DockPanel>
        </Expander>
    </Grid>
</Window>